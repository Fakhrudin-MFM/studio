<%
let params = {
  createTitle: 'New module',
  updateTitle: 'Update module'
};
%>
<div id="deploy-module-registry-modal" class="modal" role="dialog" aria-hidden="true"
     data-params="<%= JSON.stringify(params) %>">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title l10n">Registry deploy</h4>
      </div>
      <div class="modal-body">
        <form class="form form-horizontal">

          <%- partial('../attrs/string', {
            name: 'defaultPath',
            label: 'Default path'
          }) %>

          <%- partial('../attrs/checkbox', {
            name: 'inlineForm',
            label: 'Inline form',
            defaultValue: true
          }) %>

          <%- partial('../attrs/file', {
            name: 'logoFile',
            label: 'Logo file',
            accept: '.png',
            image: true
          }) %>

          <%- partial('../attrs/string', {
            name: 'logo',
            label: 'Logo'
          }) %>

          <%- partial('../attrs/json', {
            name: 'statics',
            label: 'Statics'
          }) %>

          <%- partial('../attrs/json', {
            name: 'import',
            label: 'Import',
            defaultValue: null
          }) %>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="form-json btn btn-default l10n pull-right">JSON</button>
        <button type="button" class="form-create btn btn-success l10n">Create</button>
        <button type="button" class="form-update btn btn-primary l10n">Save</button>
        <button type="button" class="form-cancel btn btn-default l10n">Cancel</button>
      </div>
    </div>
  </div>
</div>
