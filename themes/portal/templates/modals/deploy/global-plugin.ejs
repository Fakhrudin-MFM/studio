<%
let params = {
  createTitle: 'New plugin',
  updateTitle: 'Update plugin'
};
%>
<div id="deploy-global-plugin-modal" class="modal" role="dialog" aria-hidden="true"
     data-params="<%= JSON.stringify(params) %>">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title l10n">Deploy</h4>
      </div>
      <div class="modal-body">
        <form class="form form-horizontal">

          <%- partial('../attrs/string', {
            name: 'code',
            label: 'Code',
            required: true,
            mask: {'regex': '^[a-zA-Z0-9-_]+$'}
          }) %>

          <%- partial('../attrs/string', {
            name: 'module',
            label: 'Module',
            mask: {'regex': '^[a-zA-Z0-9-_]+$'}
          }) %>

          <%- partial('../attrs/string', {
            name: 'initMethod',
            label: 'Init method',
            mask: {'regex': '^[a-zA-Z0-9-_]+$'},
            defaultValue: 'init'
          }) %>

          <%- partial('../attrs/integer', {
            name: 'initLevel',
            label: 'Init level',
            defaultValue: 1
          }) %>

          <%- partial('../attrs/json', {
            name: 'options',
            label: 'Options',
            defaultValue: null
          }) %>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="form-create btn btn-success l10n">Create</button>
        <button type="button" class="form-update btn btn-primary l10n">Save</button>
        <button type="button" class="form-cancel btn btn-default l10n">Cancel</button>
      </div>
    </div>
  </div>
</div>
