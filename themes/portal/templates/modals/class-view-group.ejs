<%
let params = {
  createTitle: 'New group',
  updateTitle: 'Update group'
};
%>
<div id="class-view-group-modal" class="modal" role="dialog" aria-hidden="true"
     data-params="<%= JSON.stringify(params) %>">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title l10n">View group</h4>
      </div>
      <div class="modal-body">
        <form class="form form-horizontal">

          <%- partial('./attrs/radio-list', {
            name: 'display',
            items: [{
              value: 'group',
              text: 'Group'
            },{
              value: 'tab',
              text: 'Tab'
            }],
            defaultValue: 'group'
          }) %>

          <%- partial('./attrs/string', {
            name: 'caption',
            label: 'Caption',
            required: true
          }) %>

          <%- partial('./attrs/select-object', {
            type: 'selectGroup',
            name: 'group',
            label: 'Parent group'
          }) %>

          <%- partial('./attrs/integer', {
            name: 'type',
            label: 'Type',
            defaultValue: 0
          }) %>

          <%- partial('./attrs/integer', {
            name: 'size',
            label: 'Size',
            defaultValue: 2
          }) %>

          <%- partial('./attrs/integer', {
            name: 'orderNumber',
            label: 'Order number',
            defaultValue: 0
          }) %>

          <%- partial('./attrs/integer', {
            name: 'mode',
            label: 'Mode',
            defaultValue: 1
          }) %>

          <%- partial('./attrs/json', {
            name: 'options',
            label: 'Options'
          }) %>

        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="form-create btn btn-success l10n">Create</button>
        <button type="button" class="form-update btn btn-primary l10n">Save</button>
        <button type="button" class="form-cancel btn btn-default l10n">Cancel</button>
      </div>
    </div>
  </div>
</div>