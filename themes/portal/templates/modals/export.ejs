<%
let params = {
};
%>
<div id="export-modal" class="modal" role="dialog" aria-hidden="true"
     data-params="<%= JSON.stringify(params) %>">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title l10n">Export to external service</h4>
      </div>
      <div class="modal-body">

        <div class="form-alert alert">
          <button type="button" class="close"><span aria-hidden="true">Ã—</span></button>
          <div class="alert-content"></div>
        </div>

        <form class="form form-horizontal">

          <%- partial('./attrs/select-external-service', {
            name: 'service',
            label: 'External service',
            required: true
          }) %>

          <%- partial('./attrs/checkbox', {
            name: 'nocreate',
            label: 'Do not create SITEX-classes (upload only)'
          }) %>

          <%- partial('./attrs/checkbox', {
            name: 'check',
            label: 'Just check the ability of upload'
          }) %>

          <%- partial('./attrs/checkbox', {
            name: 'norefs',
            label: 'Do not restore reference attributes'
          }) %>

          <%- partial('./attrs/checkbox', {
            name: 'skipreferrors',
            label: 'Skip reference attribute errors'
          }) %>

          <%- partial('./attrs/checkbox', {
            name: 'nohierarchy',
            label: 'Do not restore class hierarchy'
          }) %>

          <%- partial('./attrs/checkbox', {
            name: 'wfremove',
            label: 'Remove workflow definitions'
          }) %>

        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="form-export btn btn-primary l10n">Export</button>
        <button type="button" class="form-cancel btn btn-default l10n">Close</button>
      </div>
    </div>
  </div>
</div>
