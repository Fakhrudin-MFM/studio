<!-- select -->
<%
  let params = {
    'noItemTranslate': typeof noItemTranslate === 'undefined' ? false : noItemTranslate,
    'hasEmpty': typeof hasEmpty === 'undefined' ? true : hasEmpty
  };
%>
<%- partial('./params', {params}) %>

<div class="attr form-group<%- params.required %>"
     data-type="select"
     data-name="<%- params.name %>"
     data-default-value="<%= params.defaultValue %>">
  <label class="control-label col-sm-3 l10n"><%- params.label %></label>
  <div class="col-sm-9">
    <select class="form-control value">
      <% if (params.hasEmpty) { %>
      <option class="l10n"><%- params.placeholder %></option>
      <% } %>
      <% for (let item of items) { %>
      <% let optionClass = item.noTranslate || params.noItemTranslate ? '' : 'l10n'; %>
      <option value="<%- item.value %>"<%- item.value === params.value ? ' selected' : '' %>
              class="<%- optionClass %>"><%= item.text %></option>
      <% } %>
    </select>
    <div class="hint-block l10n"><%- params.hint %></div>
    <div class="error-block"></div>
  </div>
</div>
