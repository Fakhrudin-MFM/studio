<!-- check-list -->
<%
  let params = {};
%>
<%- partial('./params', {params}) %>

<div class="attr form-group<%- params.required %>"
     data-type="checkList"
     data-name="<%- params.name %>"
     data-action="<%- params.action %>"
     data-default-value="<%= JSON.stringify(params.defaultValue) %>">
  <label class="control-label col-sm-3 l10n"><%- params.label %></label>
  <div class="col-sm-9">
    <div class="checkbox-list column">
      <% for (let item of items) { %>
      <label class="checkbox-inline">
        <input type="checkbox" name="<%- params.name %>" class="value"
               value="<%- item.value %>" <%- item.value === params.value ? 'checked' : '' %>>
        <span class="l10n"><%= item.text %></span>
      </label>
      <% } %>
    </div>
    <div class="hint-block l10n"><%- params.hint %></div>
    <div class="error-block"></div>
  </div>
</div>
